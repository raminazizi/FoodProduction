<p id="notice"><%= notice %></p>

<h1>Listing Purchasings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchasings.each do |purchasing| %>
      <tr>
        <td><%= purchasing.date %></td>
        <td><%= link_to 'Show', purchasing %></td>
        <td><%= link_to 'Edit', edit_purchasing_path(purchasing) %></td>
        <td><%= link_to 'Destroy', purchasing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

