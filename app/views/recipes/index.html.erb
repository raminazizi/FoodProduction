<h1>Listing Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Purchasing', recipe_purchasing_path(recipe, recipe.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul class="nav nav-pills">
  <li role="presentation" class="active">
    <%= link_to 'New Recipe', new_recipe_path %>
  </li>
  <li role="presentation" >
    <%= link_to 'See all items', items_path %>
  </li>
</ul>
